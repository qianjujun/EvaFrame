<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <TextView
            android:gravity="center"
            android:id="@+id/tv_progress1"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="@dimen/q200"/>

        <TextView
            android:gravity="center"
            android:id="@+id/tv_progress2"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="@dimen/q200"/>

        <TextView
            android:gravity="center"
            android:text="1"
            android:id="@+id/tv_progress21"
            android:textColor="@color/white"
            android:background="@color/blue_01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/q100"/>

        <TextView
            android:gravity="center"
            android:text="1"
            android:id="@+id/tv_progress22"
            android:textColor="@color/white"
            android:background="@color/blue_01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/q100"/>

        <Button
            android:text="正常执行"
            android:id="@+id/btn_bind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="多线程执行"
            android:id="@+id/btn_unbind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="拆分执行"
            android:id="@+id/btn_unbind_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:text="顺序执行"
            android:id="@+id/btn_unbind_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>
